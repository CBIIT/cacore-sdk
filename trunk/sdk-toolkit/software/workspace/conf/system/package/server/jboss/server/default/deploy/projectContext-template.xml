<!-- ==================================================================== -->
<!--  Datasource config for MySQL using 2.0.11 driver                     -->
<!-- ==================================================================== -->


<datasources>
  <local-tx-datasource>
    <jndi-name>@DB_JNDI_NAME@</jndi-name>
    <connection-url>@DB_CONNECTION_URL@</connection-url>
    <user-name>@DB_USERNAME@</user-name>
    <password>@DB_PASSWORD@</password>
    <driver-class>@DB_DRIVER@</driver-class>
  </local-tx-datasource>
</datasources>
